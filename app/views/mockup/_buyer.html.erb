<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th></th>
    <th>代码</th>
    <th>名称</th>
    <th>控股人</th>
    <th>行业</th>
  </tr>
  </thead>
  <tbody>
  <% buyers.each do |buyer| %>
    <% if buyer.deals.size > 0 %>
      <tr class='info'>
    <% else %>
      <tr>
    <% end %>
        <td>
          <label>
            <%= check_box_tag "buyer_ids[]", buyer.id %>
          </label>
        </td>
        <td><%= buyer.code %></td>
        <td><%= buyer.name %></td>
        <td><%= buyer.owner %></td>
        <td><%= buyer.industry.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>
